{
  "name": "postcss-sharp-for-html-coding",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "postcss:dir": "postcss src/assets/css -d dist/assets/css",
    "postcss:watch": "postcss src/assets/css -d dist/assets/css -w --map",
    "sharp:watch": "onchange \"src/assets/images/**/*.{png,jpg,jpeg,svg,gif}\" -- node sharp-watch.mjs {{changed}}",
    "sharp:build": "node sharp-build.mjs",
    "copy:html": "npx --yes cpx2 \"src/**/*.html\" dist",
    "copy:html:watch": "npx --yes cpx2 \"src/**/*.html\" dist --watch",
     "copy:js": "npx --yes cpx2 \"src/assets/js/**/*.{js,mjs}\" dist/assets/js",
     "copy:js:watch": "npx --yes cpx2 \"src/assets/js/**/*.{js,mjs}\" dist/assets/js --watch", 
     "build": "npm-run-all copy:html copy:js postcss:dir",
     "watch": "npm-run-all -p postcss:watch sharp:watch copy:html:watch copy:js:watch" 

  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "cpx2": "^8.0.0",
    "css-declaration-sorter": "^7.2.0",
    "cssnano": "^7.0.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^9.5.16",
    "postcss-sort-media-queries": "^5.2.0",
    "sharp": "^0.32.6"
  }
}
